<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akera.mwogo.Activities.UpdateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome User"
            android:textColor="#594f00"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:fontFamily="casual"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile to Continue"
            android:textColor="#594f00"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:fontFamily="casual"
            android:paddingBottom="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <EditText
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name...."
            android:maxLines="1"
            android:id="@+id/et_name"
            android:background="@drawable/input_outline">

            <requestFocus></requestFocus>

        </EditText>


        <EditText
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail...."
            android:maxLines="1"
            android:id="@+id/et_email"
            android:background="@drawable/input_outline"/>

        <EditText
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact...."
            android:inputType="number"
            android:maxLines="1"
            android:id="@+id/et_contact"
            android:background="@drawable/input_outline"/>

        <EditText
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth...."
            android:inputType="date"
            android:maxLines="1"
            android:id="@+id/et_dob"
            android:clickable="true"
            android:focusable="false"
            android:background="@drawable/input_outline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_outline"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Gender" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_grp_gender"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/rb_male"
                    android:padding="8dp"
                    android:checked="true"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/rb_female"
                    android:padding="8dp"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:id="@+id/rb_other"
                    android:padding="8dp"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_outline"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">


       <TextView
           android:paddingTop="15dp"
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:paddingBottom="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:text="Choose your Pill"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/pill_rgroup">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Pill"
                android:id="@+id/pill_red"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue Pill"
                android:id="@+id/pill_blue"/>

        </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/btn_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="Update Profile"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>
